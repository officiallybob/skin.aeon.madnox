<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="FeaturedTopLabel">
		<width min="15" max="980">auto</width>
		<height>38</height>
		<font>Font_Reg37_Caps</font>
		<shadowcolor>bcshadow</shadowcolor>
		<textcolor>white2</textcolor>
		<scroll>true</scroll>
		<include condition="![Window.IsActive(skinsettings) | Window.IsActive(SettingsCategory.xml) | Window.IsActive(systeminfo) | Window.IsActive(settings)]">Animation_WindowFade200</include>
	</include>
	<include name="BreadcrumbsLabel">
		<left>10</left>
		<width min="15" max="530">auto</width>
		<height>38</height>
		<font>Font_Reg30_Caps</font>
		<shadowcolor>bcshadow</shadowcolor>
		<textcolor>grey</textcolor>
		<scroll>true</scroll>
		<include condition="![Window.IsActive(skinsettings) | Window.IsActive(SettingsCategory.xml) | Window.IsActive(systeminfo) | Window.IsActive(settings)]">Animation_WindowFade200</include>
	</include>
	<include name="Breadcrumbs_BackBar">
		<control type="group">
			<visible>!Skin.HasSetting(ClassicTopBar) + !Skin.HasSetting(disabletopbar)</visible>
			<control type="image">
				<width>1920</width>
				<height>87</height>
				<texture colordiffuse="$VAR[ExtendedColorVar]" flipy="true">home/nav_back.png</texture>
				<visible>!Skin.HasSetting(FadedTopBar)</visible>
			</control>
			<control type="image">
				<top>-40</top>
				<width>2100</width>
				<height>115</height>
				<texture>views/logo_tagline_gradient.png</texture>
				<visible>Skin.HasSetting(FadedTopBar)</visible>
			</control>
		</control>
		<!--left widget -->
		<control type="image">
			<left>-140</left>
			<width>794</width>
			<height>87</height>
			<texture colordiffuse="$VAR[ExtendedColorVar]" flipy="true" flipx="true">home/timepanel_mid.png</texture>
			<include>Animation_VisibleChange400</include>
			<visible>Skin.HasSetting(ClassicTopBar) + Skin.HasSetting(breadcrumbslabel)</visible>
			<animation effect="slide" start="-750" end="0" time="240">VisibleChange</animation>
			<animation effect="slide" end="140" time="240" condition="Container.Content(songs) + ![Player.HasMedia + Skin.HasSetting(GlobalNowPlaying)]">Conditional</animation>
			<animation effect="slide" end="80" time="240" condition="Player.HasMedia + Skin.HasSetting(GlobalNowPlaying)">Conditional</animation>
		</control>
	</include>
	<include name="BreadcrumbsContent">
		<control type="grouplist">
			<left>5</left>
			<include condition="!Skin.HasSetting(ClassicTopBar)">TopBarWidthLeftSide</include>
			<include condition="Skin.HasSetting(ClassicTopBar)">ClassicTopBarWidthLeftSide</include>
			<orientation>horizontal</orientation>
			<visible>Skin.HasSetting(breadcrumbslabel)</visible>
			<usecontrolcoords>true</usecontrolcoords>
			<visible>![Player.HasMedia + Skin.HasSetting(GlobalNowPlaying) + String.IsEmpty(Window(videos).Property(tvtunesIsAlive))]</visible>
			<control type="image">
				<width>36</width>
				<height>36</height>
				<top>-2</top>
				<texture colordiffuse="$VAR[TitleColorVar]">$VAR[ColorDefaultIcons]DefaultFolderBack.png</texture>
				<animation effect="slide" end="-9,4" center="auto" time="0" condition="true">Conditional</animation>
				<animation effect="rotate" end="-90" center="auto" delay="240" time="640" condition="Window.IsActive(musicinformation) | Control.HasFocus(7000) | Control.IsVisible(508) | Control.IsVisible(501) | Control.IsVisible(503) | Control.IsVisible(510) | Control.IsVisible(57) | Control.IsVisible(516) | Control.IsVisible(509) | [Control.IsVisible(500) + !Skin.HasSetting(WallVertical)]">Conditional</animation>
				<animation effect="rotate" end="-180" center="auto" delay="240" time="640" condition="ControlGroup(9000).HasFocus">Conditional</animation>
				<animation effect="rotate" start="-90" end="180" center="auto" delay="240" time="640" condition="Control.IsVisible(503) + [Skin.HasSetting(landscapeonelogo) + Container.Content(movies)]">Conditional</animation>
				<include>Animation_VisibleChange400</include>
				<visible>Skin.HasSetting(TopBarToolTip)</visible>
			</control>
			<control type="image">
				<width>54</width>
				<height>38</height>
				<aspectratio>keep</aspectratio>
				<texture colordiffuse="$VAR[TitleColorVar]">$VAR[BreadcrumbsIconVar]</texture>
				<include condition="![Window.IsActive(skinsettings) | Window.IsActive(SettingsCategory.xml) | Window.IsActive(systeminfo) | Window.IsActive(settings)]">Animation_WindowFade200</include>
				<visible>Skin.HasSetting(breadcrumbslabel) + ![Skin.HasSetting(GlobalNowPlaying) + Player.HasMedia]</visible>
			</control>
			<control type="label">
				<label>$VAR[BreadcrumbsVideoVar]</label>
				<include>BreadcrumbsLabel</include>
			</control>
			<control type="label">
				<label>$VAR[BreadcrumbsLabel2Var]</label>
				<include>BreadcrumbsLabel</include>
				<visible>!Window.IsActive(tvchannels)</visible>
			</control>
			<control type="label">
				<label>$VAR[BreadcrumbsFilterVar]</label>
				<include>BreadcrumbsLabel</include>
			</control>
		</control>
	</include>
	<include name="Furniture_NowPlayingWidget">
		<control type="group">
			<include>Animation_HideBreadCrumbs</include>
			<visible>Skin.HasSetting(GlobalNowPlaying) + Player.HasMedia</visible>
			<include condition="Window.isActive(videos) + system.hasaddon(script.tvtunes)">TvTunesVisibleCondition</include>
			<control type="multiimage">
				<left>12</left>
				<top>9</top>
				<width>30</width>
				<height>24</height>
				<imagepath>VisualEqu/</imagepath>
				<fadetime>10</fadetime>
				<timeperimage>100</timeperimage>
				<randomize>true</randomize>
				<include condition="![Window.IsActive(skinsettings) | Window.IsActive(SettingsCategory.xml) | Window.IsActive(systeminfo) | Window.IsActive(settings)]">Animation_WindowFade200</include>
				<visible>Player.HasAudio + Player.Playing</visible>
				<colordiffuse>$VAR[TitleColorVar]</colordiffuse>
			</control>
			<control type="progress">
				<left>0</left>
				<top>0</top>
				<width>660</width>
				<height>45</height>
				<info>Player.Progress</info>
				<texturebg>osd/info/osd_progress_back_cache.png</texturebg>
				<lefttexture></lefttexture>
				<midtexture colordiffuse="$VAR[HomeMenuTextFocusVar]">osd/info/osd_progress_mid.png</midtexture>
				<righttexture></righttexture>
				<visible>Player.HasMedia + Skin.HasSetting(ProgressNowPlaying)</visible>
				<animation effect="fade" end="35" time="600" condition="Player.HasMedia">Conditional</animation>
			</control>
			<control type="image">
				<left>12</left>
				<top>9</top>
				<width>30</width>
				<height>24</height>
				<texture colordiffuse="$VAR[TitleColorVar]">VisualEqu/static/0.png</texture>
				<include condition="![Window.IsActive(skinsettings) | Window.IsActive(SettingsCategory.xml) | Window.IsActive(systeminfo) | Window.IsActive(settings)]">Animation_WindowFade200</include>
				<visible>Player.HasAudio + !Player.Playing</visible>
			</control>
			<control type="image">
				<width>54</width>
				<height>38</height>
				<aspectratio>keep</aspectratio>
				<texture colordiffuse="$VAR[TitleColorVar]">common/logo_movies.png</texture>
				<visible>Player.HasVideo</visible>
				<include condition="![Window.IsActive(skinsettings) | Window.IsActive(SettingsCategory.xml) | Window.IsActive(systeminfo) | Window.IsActive(settings)]">Animation_WindowFade200</include>
			</control>
			<control type="grouplist">
				<left>68</left>
				<width>600</width>
				<height>118</height>
				<orientation>horizontal</orientation>
				<itemgap>22</itemgap>
				<control type="label">
					<width min="15" max="200">auto</width>
					<height>38</height>
					<label>$INFO[Player.Time]</label>
					<font>Font_Reg30_Caps</font>
					<textcolor>grey</textcolor>
				</control>
				<control type="fadelabel">
					<left>280</left>
					<width>470</width>
					<height>38</height>
					<label>[COLOR white2]$INFO[MusicPlayer.Title][/COLOR]</label>
					<label>[COLOR white3]$INFO[MusicPlayer.Artist][/COLOR]</label>
					<font>Font_Reg30_Caps</font>
					<scroll>true</scroll>
					<pauseatend>7000</pauseatend>
					<visible>Player.HasAudio</visible>
				</control>
				<control type="fadelabel">
					<left>310</left>
					<width>480</width>
					<height>38</height>
					<label>[COLOR white2]$INFO[Videoplayer.Title][/COLOR]</label>
					<label>[COLOR white3]$INFO[Videoplayer.TVShowTitle][/COLOR]</label>
					<font>Font_Reg30_Caps</font>
					<scroll>true</scroll>
					<pauseatend>7000</pauseatend>
					<visible>!String.IsEmpty(Videoplayer.TVShowTitle) + Player.HasVideo</visible>
				</control>
				<control type="fadelabel">
					<left>310</left>
					<width>480</width>
					<height>38</height>
					<label>$INFO[Videoplayer.Title]</label>
					<font>Font_Reg30_Caps</font>
					<scroll>true</scroll>
					<pauseatend>7000</pauseatend>
					<visible>String.IsEmpty(Videoplayer.TVShowTitle) + Player.HasVideo + String.IsEmpty(VideoPlayer.ChannelName)</visible>
				</control>
				<control type="fadelabel">
					<left>310</left>
					<width>480</width>
					<height>38</height>
					<label>$INFO[Videoplayer.ChannelName]</label>
					<label>$INFO[Videoplayer.Title]</label>
					<font>Font_Reg30_Caps</font>
					<scroll>true</scroll>
					<pauseatend>7000</pauseatend>
					<visible>Player.HasVideo + !String.IsEmpty(VideoPlayer.ChannelName)</visible>
				</control>
			</control>
		</control>
	</include>
	<include name="Breadcrumbs_Furniture">
		<control type="group">
			<visible>!Skin.HasSetting(disabletopbar) + !Window.IsVisible(script-globalsearch-main.xml)</visible>
			<control type="button" id="4051">
				<include>HiddenObject</include>
				<visible>![Container.Scrolling | Container.OnScrollNext | Container.OnScrollPrevious]</visible>
				<animation effect="fade" end="100" time="0">Visible</animation>
				<animation effect="fade" time="400">Hidden</animation>
			</control>
			<!--right widget -->
			<control type="group">
				<left>770r</left>
				<animation effect="slide" end="145" time="320" condition="!Skin.HasSetting(breadcrumbsweather)">Conditional</animation>
				<animation effect="slide" end="175" time="320" condition="Skin.HasSetting(shorterhomebars)">Conditional</animation>
				<control type="image">
					<width>904</width>
					<height>87</height>
					<texture colordiffuse="$VAR[ExtendedColorVar]" flipy="true">home/timepanel_mid.png</texture>
					<include>Animation_VisibleChange400</include>
					<visible>Skin.HasSetting(ClassicTopBar)</visible>
					<animation effect="slide" start="750" end="0" time="240">VisibleChange</animation>
					<animation effect="slide" end="65" time="320" condition="!Skin.HasSetting(W_condition_image)">Conditional</animation>
				</control>
			</control>
			<control type="group">
				<animation effect="slide" start="0,-300" end="0" time="540" tween="cubic">VisibleChange</animation>
				<visible>!String.IsEmpty(Container.NumItems)</visible>
				<visible>Control.HasFocus(60) | Control.HasFocus(61) | Control.HasFocus(62) | Control.HasFocus(71) | Control.HasFocus(70) | !Control.IsVisible(4051) | [!Skin.HasSetting(FadedTopBar) + !Skin.HasSetting(ClassicTopBar)]</visible>
				<control type="image">
					<left>645</left>
					<top>0</top>
					<width>600</width>
					<height>87</height>
					<visible>Skin.HasSetting(ClassicTopBar)</visible>
					<texture colordiffuse="$VAR[ExtendedColorVar]" border="70,0,70,0">home/submenubar.png</texture>
				</control>
				<control type="grouplist">
					<width>1920</width>
					<align>center</align>
					<!--breadcrumbs-->
					<itemgap>10</itemgap>
					<orientation>horizontal</orientation>
					<control type="image">
						<width>34</width>
						<height>42</height>
						<aspectratio>keep</aspectratio>
						<texture colordiffuse="$VAR[TitleColorVar]">breadcrumbs/items.png</texture>
						<include>Animation_WindowFade200</include>
					</control>
					<control type="label">
						<label>$INFO[Container.NumItems] $VAR[ItemLabelVar]</label>
						<include>BreadcrumbsLabel</include>
					</control>
					<control type="image">
						<width>34</width>
						<height>42</height>
						<aspectratio>keep</aspectratio>
						<texture colordiffuse="$VAR[TitleColorVar]">breadcrumbs/pages.png</texture>
						<include>Animation_WindowFade200</include>
						<visible>!String.IsEqual(Container.NumPages,1)</visible>
					</control>
					<control type="label">
						<label>$INFO[Container.CurrentPage]$INFO[Container.NumPages,/]       </label>
						<include>BreadcrumbsLabel</include>
						<visible>!String.IsEqual(Container.NumPages,1)</visible>
					</control>
					<control type="label">
						<width>40</width>
						<height>38</height>
						<label>$INFO[ListItem.SortLetter]</label>
						<font>Font_Bold28_Caps</font>
						<shadowcolor>bcshadow</shadowcolor>
						<textcolor>time</textcolor>
						<scroll>false</scroll>
						<include condition="![Window.IsActive(skinsettings) | Window.IsActive(SettingsCategory.xml) | Window.IsActive(systeminfo) | Window.IsActive(settings)]">Animation_WindowFade200</include>
						<animation effect="fade" start="100" end="0" time="400" delay="400" condition="Control.IsVisible(4051) + !Skin.HasSetting(ClassicTopBar)">Conditional</animation>
						<visible>[String.Contains(Container.SortMethod,$LOCALIZE[551]) | String.Contains(Container.SortMethod,$LOCALIZE[561]) | String.Contains(Container.SortMethod,$LOCALIZE[558]) | String.Contains(Container.SortMethod,$LOCALIZE[557]) | String.Contains(Container.SortMethod,$LOCALIZE[556])]</visible>
					</control>
				</control>
				<!--  ScrollLabel  -->
				<control type="group">
					<posx>870</posx>
					<posy>455</posy>
					<width>430</width>
					<height>332</height>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>170</width>
						<height>170</height>
						<align>center</align>
						<aligny>center</aligny>
						<texture>views/ScrollLetter2.png</texture>
						<bordersize>1</bordersize>
						<include condition="![Window.IsActive(skinsettings) | Window.IsActive(SettingsCategory.xml) | Window.IsActive(systeminfo) | Window.IsActive(settings)]">Animation_WindowFade200</include>
						<animation effect="fade" start="100" end="0" time="200" delay="100" condition="Control.IsVisible(4051) + !Skin.HasSetting(ClassicTopBar)">Conditional</animation>
						<visible>[String.Contains(Container.SortMethod,$LOCALIZE[551]) | String.Contains(Container.SortMethod,$LOCALIZE[561]) | String.Contains(Container.SortMethod,$LOCALIZE[558]) | String.Contains(Container.SortMethod,$LOCALIZE[557]) | String.Contains(Container.SortMethod,$LOCALIZE[556])] + Skin.HasSetting(ShowScrollLetter)</visible>
					</control>
					<control type="label">
						<posx>1</posx>
						<posy>0</posy>
						<width>170</width>
						<height>170</height>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.SortLetter]</label>
						<textcolor>$VAR[TitleColorVar]</textcolor>
						<shadowcolor>black</shadowcolor>
						<font>Font_ShowcaseMainLabel3x_Caps</font>
						<include condition="![Window.IsActive(skinsettings) | Window.IsActive(SettingsCategory.xml) | Window.IsActive(systeminfo) | Window.IsActive(settings)]">Animation_WindowFade200</include>
						<animation effect="fade" start="100" end="0" time="200" delay="100" condition="Control.IsVisible(4051) + !Skin.HasSetting(ClassicTopBar)">Conditional</animation>
						<visible>[String.Contains(Container.SortMethod,$LOCALIZE[551]) | String.Contains(Container.SortMethod,$LOCALIZE[561]) | String.Contains(Container.SortMethod,$LOCALIZE[558]) | String.Contains(Container.SortMethod,$LOCALIZE[557]) | String.Contains(Container.SortMethod,$LOCALIZE[556])] + Skin.HasSetting(ShowScrollLetter)</visible>
					</control>
				</control>
			</control>
			<control type="group">
				<left>780r</left>
				<animation effect="slide" end="80" time="320" condition="!Skin.HasSetting(W_condition_image)">Conditional</animation>
				<control type="label">
					<left>100</left>
					<width>500</width>
					<height>36</height>
					<label>$INFO[Window(weather).Property(Current.Temperature)] $INFO[System.TemperatureUnits] [COLOR grey]• [/COLOR]</label>
					<font>Font_Reg28_Caps</font>
					<textcolor>$VAR[HomeMenuWidgetTextVar]</textcolor>
					<visible>!Skin.HasSetting(shorterhomebars) + Skin.HasSetting(breadcrumbsweather)</visible>
					<animation effect="slide" end="-10" time="320" condition="!Skin.HasSetting(W_condition_image)">Conditional</animation>
				</control>
				<control type="image">
					<left>190</left>
					<top>-15</top>
					<width>70</width>
					<height>70</height>
					<texture colordiffuse="white2">$VAR[Realweatherimg]$INFO[Weather.FanartCode].png</texture>
					<visible>!Skin.HasSetting(W_condition_image)</visible>
					<visible>!Skin.HasSetting(shorterhomebars) + Skin.HasSetting(breadcrumbsweather)</visible>
					<animation effect="slide" end="-20" time="320" condition="!Skin.HasSetting(W_condition_image)">Conditional</animation>
					<animation effect="slide" end="5" time="320" condition="Skin.HasSetting(W_real_image)">Conditional</animation>
				</control>
				<control type="label">
					<left>210</left>
					<top>-3</top>
					<width>210</width>
					<height>40</height>
					<aligny>top</aligny>
					<label>$INFO[Window(Weather).Property(Current.Condition)]</label>
					<font>Font_Reg33_Caps</font>
					<textcolor>grey</textcolor>
					<scroll>true</scroll>
					<visible>Skin.HasSetting(W_condition_image)</visible>
					<visible>!Skin.HasSetting(shorterhomebars) + Skin.HasSetting(breadcrumbsweather)</visible>
					<animation effect="slide" end="-20" time="320" condition="Skin.HasSetting(W_condition_image)">Conditional</animation>
				</control>
				<control type="label">
					<left>170</left>
					<width>600</width>
					<height>36</height>
					<align>right</align>
					<label>[COLOR grey]$INFO[System.Date(ddd)] • $INFO[System.Date(D)] $INFO[System.Date(mmm)] $INFO[System.Date(yyyy)]  •[/COLOR]  $INFO[System.Time]</label>
					<font>Font_Reg28_Caps</font>
					<textcolor>$VAR[HomeMenuWidgetTextVar]</textcolor>
					<visible>!Skin.HasSetting(shorterhomebars) + Skin.HasSetting(W_condition_image)</visible>
				</control>
				<control type="label">
					<left>90</left>
					<width>600</width>
					<height>36</height>
					<align>right</align>
					<label>[COLOR grey]$INFO[System.Date(DDD)] • $INFO[System.Date(D)] $INFO[System.Date(mmm)] $INFO[System.Date(yyyy)]  •[/COLOR]  $INFO[System.Time]</label>
					<font>Font_Reg28_Caps</font>
					<textcolor>$VAR[HomeMenuWidgetTextVar]</textcolor>
					<visible>Skin.HasSetting(shorterhomebars)</visible>
				</control>
				<control type="label">
					<left>90</left>
					<width>600</width>
					<height>36</height>
					<align>right</align>
					<label>[COLOR grey]$INFO[System.Date(DDD)] • $INFO[System.Date(D)] $INFO[System.Date(mmm)] $INFO[System.Date(yyyy)]  •[/COLOR]  $INFO[System.Time]</label>
					<font>Font_Reg28_Caps</font>
					<textcolor>$VAR[HomeMenuWidgetTextVar]</textcolor>
					<visible>!Skin.HasSetting(shorterhomebars) + !Skin.HasSetting(W_condition_image)</visible>
				</control>
			</control>
		</control>
	</include>
	<include name="TopBarWidthLeftSide">
		<width>767</width>
	</include>
	<include name="ClassicTopBarWidthLeftSide">
		<width>700</width>
	</include>
</includes>